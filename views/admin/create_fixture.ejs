<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <% if (typeof (error) != 'undefined') { %>
                <%for (let i=0; i<error.length; i++){%>
                    <h5><%=error[i].message%></h5>
                <%}%>
            <% } %>
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Create Fixture</h1>
            <form action="/admin/create_fixture" method="POST">
                <div class="form-group">
                    <label for="home_team">
                        Home team name
                    </label>
                    <input
                            type="text"
                            id="home_team"
                            name="home"
                            class="form-control"
                            placeholder="Enter home team"
                    />
                </div>
                <div class="form-group">
                    <label for="away_team">
                        Away team name
                    </label>
                    <input
                            type="text"
                            id="away_team"
                            name="away"
                            class="form-control"
                            placeholder="Enter away team"
                    />
                </div>
                <div class="form-group">
                    <label for="season">
                        Season
                    </label>
                    <input
                            type="text"
                            id="season"
                            name="season"
                            class="form-control"
                            placeholder="Enter Season"
                    />
                </div>
                <div class="form-group">
                    <label for="gw">
                        Game week
                    </label>
                    <input
                            type="number"
                            id="gw"
                            name="gw"
                            class="form-control"
                            placeholder="Enter game week"
                    />
                </div>
                <div class="form-group">
                    <label for="kickoff_time">
                        Kickoff time
                    </label>
                    <input
                            type="datetime-local"
                            id="kickoff_time"
                            name="kickoff"
                            class="form-control"
                            placeholder="Enter kickoff time"
                    />
                </div>
                <div class="pull-right">
                    <button class="btn-info btn">Create Fixture</button>
                </div>
            </form>
        </div>
    </div>
</div>