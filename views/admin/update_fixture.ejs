<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <% if (typeof (error) != 'undefined') { %>
                <%for (let i=0; i<error.length; i++){%>
                <div class="alert alert-dark" role="alert">
                    <%=error[i].message%></div>
                <%}%>
            <% } %>
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Update Fixture</h1>
            <form action="/admin/update_fixture" method="POST">
                <div class="form-group">
                    <label for="home_team">
                        Home team name
                    </label>
                    <input
                            type="text"
                            id="home_team"
                            name="home"
                            class="form-control"
                            placeholder="Enter home team"
                    />
                </div>
                <div class="form-group">
                    <label for="away_team">
                        Away team name
                    </label>
                    <input
                            type="text"
                            id="away_team"
                            name="away"
                            class="form-control"
                            placeholder="Enter away team"
                    />
                </div>
                <div class="form-group">
                    <label for="season">
                        Season
                    </label>
                    <input
                            type="text"
                            id="season"
                            name="season"
                            class="form-control"
                            placeholder="Enter Season"
                    />
                </div>
                <div class="form-group">
                    <label for="gw">
                        Game week
                    </label>
                    <input
                            type="number"
                            id="gw"
                            name="gw"
                            class="form-control"
                            placeholder="Enter game week"
                    />
                </div>
                <div class="form-group">
                    <label for="home_score">
                        Home score
                    </label>
                    <input
                            type="number"
                            id="home_score"
                            name="home_score"
                            class="form-control"
                            placeholder="Enter home score"
                    />
                </div>
                <div class="form-group">
                    <label for="away_score">
                        Away score
                    </label>
                    <input
                            type="number"
                            id="away_score"
                            name="away_score"
                            class="form-control"
                            placeholder="Enter away score"
                    />
                </div>
                <div class="form-group">
                    <label><b>
                        Match stats (Insert player IDs)</b>
                    </label>
                </div>
                <div class="form-group">
                    <label for="goal_scorer">
                        Goal scored
                    </label>
                    <input
                            type="text"
                            id="goal_scorer"
                            name="goal_scorer"
                            class="form-control"
                            placeholder="Enter goal scorers"
                    />
                </div>
                <div class="form-group">
                    <label for="assist">
                        Assists
                    </label>
                    <input
                            type="text"
                            id="assist"
                            name="assist"
                            class="form-control"
                            placeholder="Enter assist providers"
                    />
                </div>
                <div class="form-group">
                    <label for="goal_conceded">
                        Keeper conceding goals
                    </label>
                    <input
                            type="text"
                            id="goal_conceded"
                            name="goal_conceded"
                            class="form-control"
                            placeholder="Enter keepers conceding goals"
                    />
                </div>
                <div class="form-group">
                    <label for="own_goal">
                        Own goals
                    </label>
                    <input
                            type="text"
                            id="own_goal"
                            name="own_goal"
                            class="form-control"
                            placeholder="Enter own goal scorers"
                    />
                </div>
                <div class="form-group">
                    <label for="penalty_miss">
                        Penalty missed
                    </label>
                    <input
                            type="text"
                            id="penalty_miss"
                            name="penalty_miss"
                            class="form-control"
                            placeholder="Enter penalty misses"
                    />
                </div>
                <div class="form-group">
                    <label for="penalty_save">
                        Penalty saved
                    </label>
                    <input
                            type="text"
                            id="penalty_save"
                            name="penalty_save"
                            class="form-control"
                            placeholder="Enter penalty saves (gk)"
                    />
                </div>
                <div class="form-group">
                    <label for="red_card">
                        Red cards
                    </label>
                    <input
                            type="text"
                            id="red_card"
                            name="red_card"
                            class="form-control"
                            placeholder="Enter red cards"
                    />
                </div>
                <div class="form-group">
                    <label for="yellow_card">
                        Yellow cards
                    </label>
                    <input
                            type="text"
                            id="yellow_card"
                            name="yellow_card"
                            class="form-control"
                            placeholder="Enter yellow cards"
                    />
                </div>
                <div class="form-group">
                    <label for="clean_sheet">
                        Clean sheet
                    </label>
                    <input
                            type="text"
                            id="clean_sheet"
                            name="clean_sheet"
                            class="form-control"
                            placeholder="Enter clean sheet (gk)"
                    />
                </div>






                <div class="pull-right">
                    <button class="btn-info btn">Update Fixture</button>
                </div>
            </form>
        </div>
    </div>
</div>