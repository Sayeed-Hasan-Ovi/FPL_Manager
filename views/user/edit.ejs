<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <div class="container">

                <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Enter formation:</h1>

                    <form action='/user/edit' method="POST">
                    <div class="form-group">
                        <label for="param_name">
                            Select Formation
                        </label>
                        <input
                                type="search"
                                list="search-option"
                                id="param_name"
                                name="param"
                                class="form-control"
                                placeholder="Enter the formation"
                        />
                        <datalist id="search-option">
                            <% for (let i = 0; i < formation.length; i++) { %>
                                <option value=<%= formation[i] %>></option>
                            <% } %>
                        </datalist>
                    </div>
                    <button class="btn-info btn right-aligned-btn">Choose players</button>
                </form>
            </div>

        </div>
    </div>
</div>