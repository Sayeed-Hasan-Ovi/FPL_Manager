<div class="row mt-5">
    <div class="col-md-6 m-auto">


        <p class="text mt-4" align="right"><a href="/user/">Back to user home</a>
        <div class="card card-body">

            <div class="container">


                <h1 class="text-center mb-3">Team name: <i><%= team_name[0].NAME%></i></h1>
                <h3 class="text-center mb-3">Manager: <i><%= username%></i></h3>

                <p align="center">Total points now: <i><%= points_till_now%></i></p>


                <% if (typeof (player[0]) != 'undefined') { %>

                <table id="dtBasicExample" class="table table-striped table-bordered table-sm">
                    <thead>
                    <tr>
                        <th class="th-sm">Name
                        </th>
                        <th class="th-sm">Position
                        </th>
                        <th class="th-sm">Team
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    <%for (let i = 0; i < player.length; i++) {%>

                    <tr>
                    <td><a href="/player/<%=player[i].ID%>"><%=player[i].FIRST_NAME%> <%=player[i].LAST_NAME%></a></td>
                    <td><%=player[i].POSITION%></td>
                    <td><% if (typeof (team[i][0]) != 'undefined') { %><%=team[i][0].NAME%><%}else {%>N/A<%}%>%> </td>
                    </tr>
                <%}%>
                <%}%>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>